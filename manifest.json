{
  "manifest_version": 2,

  "name": "Read-Time",
  "description": "Estimates the read time of web articles",
  "version": "0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [ {
    "matches": ["https://www.newyorker.com/*"],
    "js": ["jquery.js", "background.js"]
  } ]
}
